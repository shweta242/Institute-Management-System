@model ManagementSystem.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-danger">
            <i class="bi bi-trash"></i> Delete Course
        </h1>
        <p class="text-muted">Please confirm that you want to delete this course.</p>
    </div>

    <!-- Course Information -->
    <div class="card shadow-lg border-0">
        <div class="card-header text-white" style="background: #dc3545;">
            <h3 class="text-center mb-0">Course Information</h3>
        </div>
        <div class="card-body p-4">
            <!-- Table Layout with Fields and Values -->
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="text-white" style="background-color: #343a40;">
                        <tr>
                            <th class="text-center" style="width: 30%;">Field</th>
                            <th class="text-center" style="width: 70%;">Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="fw-bold text-danger">Course Name</td>
                            <td>@Html.DisplayFor(model => model.Name)</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-danger">Front-End Technology</td>
                            <td>@Html.DisplayFor(model => model.FrontEnd)</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-danger">Back-End Technology</td>
                            <td>@Html.DisplayFor(model => model.BackEnd)</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-danger">Database Language</td>
                            <td>@Html.DisplayFor(model => model.DataBaseLanguage)</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-danger">Duration</td>
                            <td>@Html.DisplayFor(model => model.Duration)</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-danger">Course Fees</td>
                            <td>@Html.DisplayFor(model => model.CourseFees)</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-danger">Course Format</td>
                            <td>@Html.DisplayFor(model => model.CourseFormat)</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-danger">Description</td>
                            <td>@Html.DisplayFor(model => model.Description)</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Delete Confirmation Modal -->
            <div class="d-flex justify-content-between mt-4">
                <button class="btn btn-danger px-4 py-2 rounded-pill shadow-lg" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="CourseTable" asp-controller="Course" class="btn btn-secondary px-4 py-2 rounded-pill shadow-lg ms-3">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-center text-danger">Are you sure you want to permanently delete this course?</p>
                <div class="text-center">
                    <strong class="fw-bold">This action cannot be undone!</strong>
                </div>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

