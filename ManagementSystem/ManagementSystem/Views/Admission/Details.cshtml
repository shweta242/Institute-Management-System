@model ManagementSystem.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="container student-detail-container">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white text-center">
            <h2>Student Details</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Name</th>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <th>Gender</th>
                        <td>@Html.DisplayFor(model => model.Gender)</td>
                    </tr>
                    <tr>
                        <th>Contact No</th>
                        <td>@Html.DisplayFor(model => model.ContactNo)</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Html.DisplayFor(model => model.Email)</td>
                    </tr>
                    <tr>
                        <th>Parent Name</th>
                        <td>@Html.DisplayFor(model => model.ParentName)</td>
                    </tr>
                    <tr>
                        <th>Parent Contact No</th>
                        <td>@Html.DisplayFor(model => model.ParentContactNo)</td>
                    </tr>
                    <tr>
                        <th>Current Address</th>
                        <td>@Html.DisplayFor(model => model.CurrentAddress)</td>
                    </tr>
                    <tr>
                        <th>Permanent Address</th>
                        <td>@Html.DisplayFor(model => model.PermanentAddress)</td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>@Html.DisplayFor(model => model.City)</td>
                    </tr>
                    <tr>
                        <th>Qualification</th>
                        <td>@Html.DisplayFor(model => model.Qualification)</td>
                    </tr>
                    <tr>
                        <th>Previous School/College</th>
                        <td>@Html.DisplayFor(model => model.PreviousSchoolClg)</td>
                    </tr>
                    <tr>
                        <th>Marks</th>
                        <td>@Html.DisplayFor(model => model.Marks)</td>
                    </tr>
                    <tr>
                        <th>Course</th>
                        <td>@Html.DisplayFor(model => model.Course)</td>
                    </tr>
                    <tr>
                        <th>Admission Date</th>
                        <td>@Html.DisplayFor(model => model.AdmissionDate)</td>
                    </tr>
                    <tr>
                        <th>Registration Fees</th>
                        <td>@Html.DisplayFor(model => model.RegistrationFees)</td>
                    </tr>
                    <tr>
                        <th>Payment Mode</th>
                        <td>@Html.DisplayFor(model => model.PaymentMode)</td>
                    </tr>
                    <tr>
                        <th>Transaction ID</th>
                        <td>@Html.DisplayFor(model => model.TransactionId)</td>
                    </tr>
                   
                    <tr>
                        <th>Course Fees</th>
                        <td>@Html.DisplayFor(model => model.CourseFees)</td>
                    </tr>
                    <tr>
                        <th>Receive Amount</th>
                        <td>@Html.DisplayFor(model => model.ReceiveAmount)</td>
                    </tr>
                    <tr>
                        <th>Pending Amount</th>
                        <td>@Html.DisplayFor(model => model.PendingAmount)</td>
                    </tr>
                    <tr>
                        <th>Installment</th>
                        <td>@Html.DisplayFor(model => model.Installment)</td>
                    </tr>
                    <tr>
                        <th>First Date</th>
                        <td>@Html.DisplayFor(model => model.FirstDate)</td>
                    </tr>
                    <tr>
                        <th>First Installment</th>
                        <td>@Html.DisplayFor(model => model.FirstInsta)</td>
                    </tr>
                    <tr>
                        <th>Second Date</th>
                        <td>@Html.DisplayFor(model => model.SecondDate)</td>
                    </tr>
                    <tr>
                        <th>Second Installment</th>
                        <td>@Html.DisplayFor(model => model.SecondInsta)</td>
                    </tr>
                    <tr>
                        <th>Third Date</th>
                        <td>@Html.DisplayFor(model => model.ThirdDate)</td>
                    </tr>
                    <tr>
                        <th>Third Installment</th>
                        <td>@Html.DisplayFor(model => model.ThirdInsta)</td>
                    </tr>
                    <tr>
                        <th>Fourth Date</th>
                        <td>@Html.DisplayFor(model => model.FourthDate)</td>
                    </tr>
                    <tr>
                        <th>Fourth Installment</th>
                        <td>@Html.DisplayFor(model => model.FourthInsta)</td>
                    </tr>
                    <tr>
                        <th>Fifth Date</th>
                        <td>@Html.DisplayFor(model => model.FifthDate)</td>
                    </tr>
                    <tr>
                        <th>Fifth Installment</th>
                        <td>@Html.DisplayFor(model => model.FifthInsta)</td>
                    </tr>
                    <tr>
                        <th>Sixth Date</th>
                        <td>@Html.DisplayFor(model => model.SixthDate)</td>
                    </tr>
                    <tr>
                        <th>Sixth Installment</th>
                        <td>@Html.DisplayFor(model => model.SixthInsta)</td>
                    </tr>
                    <tr>
                        <th>Admission Taken By</th>
                        <td>@Html.DisplayFor(model => model.AddmissionTakenBy)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">
                <i class="fa fa-edit"></i> Edit
            </a>
            <a class="btn btn-secondary" asp-action="AdmissionTable">
                <i class="fa fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<!-- Custom CSS for styling -->
<style>
    .student-detail-container {
        padding: 15px 5px;
        background-color: #f0f8ff;
        max-width: 860px;
        margin: auto;
    }

    .card {
        border-radius: 8px;
    }

    .card-header {
        background-color: #28a745;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .card-header h2 {
        font-size: 2rem;
        color: #fff;
    }

    .table {
        font-size: 1rem;
    }

    .table th {
        background-color: #17a2b8;
        color: white;
        font-weight: bold;
    }

    .table td {
        background-color: #f1f1f1;
    }

    .card-footer a {
        margin: 0 10px;
        padding: 8px 16px;
        font-size: 1rem;
        text-decoration: none;
    }

    .btn-warning {
        background-color: #ff9900;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-warning:hover {
        background-color: #e68900;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .fa {
        margin-right: 8px;
    }

    /* Responsive adjustments */
    .media (max-width: 768px) {
        .card-header h2 {
            font-size: 1.6rem;
        }

        .table th, .table td {
            font-size: 0.9rem;
        }

        .card-footer {
            display: flex;
            justify-content: center;
            gap: 15px;
        }
    }
</style>

<!-- Add FontAwesome for Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
