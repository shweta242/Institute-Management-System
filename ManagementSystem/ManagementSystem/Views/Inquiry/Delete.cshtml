@model ManagementSystem.Models.Inquiry

@{
    ViewData["Title"] = "Delete Inquiry";
}

<div class="container my-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-danger">Delete Inquiry</h1>
        @* <a asp-action="Table" class="btn btn-outline-secondary">
            Back to List
        </a> *@
    </div>

    <!-- Confirmation Section -->
    <div class="alert alert-warning text-center">
        <h4>Are you sure you want to delete this inquiry?</h4>
        <p class="mb-0">This action cannot be undone.</p>
    </div>

    <!-- Inquiry Details -->
    <div class="p-4 bg-light shadow rounded">
        <h4 class="text-primary mb-3">Inquiry Details</h4>
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
            <dt class="col-sm-4">Contact</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Contact)</dd>
            <dt class="col-sm-4">Address</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
            <dt class="col-sm-4">City</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.City)</dd>
            <dt class="col-sm-4">Date of Birth</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Dob)</dd>
            <dt class="col-sm-4">Qualification</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Qualification)</dd>
            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
            <dt class="col-sm-4">Course</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Course)</dd>
            <dt class="col-sm-4">Fees</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Fees)</dd>
            <dt class="col-sm-4">Remark</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Remark)</dd>
            <dt class="col-sm-4">Inquiry Taken By</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.InquiryTakenBy)</dd>
        </dl>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-4">
        <form asp-action="Delete" method="post" id="deleteForm" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="button" class="btn btn-danger btn-lg" onclick="confirmDelete()">
                Confirm Delete
            </button>
        </form>
        <a asp-action="Table" class="btn btn-secondary btn-lg">
            Cancel
        </a>
    </div>
</div>

<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this inquiry? This action cannot be undone.")) {
            document.getElementById("deleteForm").submit();
        }
    }
</script>
