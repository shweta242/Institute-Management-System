                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MobileNo" class="control-label"></label>
                <input asp-for="MobileNo" class="form-control" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gmail" class="control-label"></label>
                <input asp-for="Gmail" class="form-control" />
                <span asp-validation-for="Gmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentName" class="control-label"></label>
                <input asp-for="ParentName" class="form-control" />
                <span asp-validation-for="ParentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiptDate" class="control-label"></label>
                <input asp-for="ReceiptDate" class="form-control" />
                <span asp-validation-for="ReceiptDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiptNo" class="control-label"></label>
                <input asp-for="ReceiptNo" class="form-control" />
                <span asp-validation-for="ReceiptNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeesStatus" class="control-label"></label>
                <input asp-for="FeesStatus" class="form-control" />
                <span asp-validation-for="FeesStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecievedAmount" class="control-label"></label>
                <input asp-for="RecievedAmount" class="form-control" />
                <span asp-validation-for="RecievedAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecievedMode" class="control-label"></label>
                <input asp-for="RecievedMode" class="form-control" />
                <span asp-validation-for="RecievedMode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionStatus" class="control-label"></label>
                <input asp-for="TransactionStatus" class="form-control" />
                <span asp-validation-for="TransactionStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionNumber" class="control-label"></label>
                <input asp-for="TransactionNumber" class="form-control" />
                <span asp-validation-for="TransactionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Narration" class="control-label"></label>
                <input asp-for="Narration" class="form-control" />
                <span asp-validation-for="Narration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceivedBy" class="control-label"></label>
                <input asp-for="ReceivedBy" class="form-control" />
                <span asp-validation-for="ReceivedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TermCondition" class="control-label"></label>
                <input asp-for="TermCondition" class="form-control" />
                <span asp-validation-for="TermCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiptRemark" class="control-label"></label>
                <input asp-for="ReceiptRemark" class="form-control" />
                <span asp-validation-for="ReceiptRemark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionDate" class="control-label"></label>
                <input asp-for="TransactionDate" class="form-control" />
                <span asp-validation-for="TransactionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PendingAmount" class="control-label"></label>
                <input asp-for="PendingAmount" class="form-control" />
                <span asp-validation-for="PendingAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Payment" asp-controller="Payment">Back to List</a>
</div>

