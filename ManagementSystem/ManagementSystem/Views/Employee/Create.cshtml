@model ManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
}

<div class="container mt-5">
    <!-- Page Header -->
    <nav class="navbar navbar-light bg-info py-3">
        <div class="container-fluid d-flex justify-content-center align-items-center">
            @* <a href="/" class="navbar-brand">
            <img src="~/Images/Picsart_24-12-07_18-34-26-772 (1).png" style="width:80px;" alt="Logo" />
            </a> *@
            <h1 class="display-4 fw-bold mx-auto text-center text-white">Add New Employee </h1>
        </div>
    </nav>
    <hr />
    <!-- Create Employee Form in Table -->
    <div class="card shadow-lg border-0">
        <div class="card-header text-white" style="background-color: #007bff;">
            <h3 class="text-center mb-0">Employee Details</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Employee Information Table -->
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <tbody>
                            <tr>
                                <td class="fw-bold text-primary">Name</td>
                                <td><input asp-for="Name" class="form-control" /></td>
                                <td><span asp-validation-for="Name" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-primary">Gender</td>
                                <td><input asp-for="Gender" class="form-control" /></td>
                                <td><span asp-validation-for="Gender" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-primary">Email</td>
                                <td><input asp-for="Email" class="form-control" /></td>
                                <td><span asp-validation-for="Email" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-primary">Contact No</td>
                                <td><input asp-for="ContactNo" class="form-control" /></td>
                                <td><span asp-validation-for="ContactNo" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-primary">Department</td>
                                <td><input asp-for="Department" class="form-control" /></td>
                                <td><span asp-validation-for="Department" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-primary">Specialized Subject</td>
                                <td><input asp-for="SpecializedSubject" class="form-control" /></td>
                                <td><span asp-validation-for="SpecializedSubject" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-primary">Designation</td>
                                <td><input asp-for="Designation" class="form-control" /></td>
                                <td><span asp-validation-for="Designation" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-primary">Date of Joining</td>
                                <td><input asp-for="DateOfJoing" class="form-control" /></td>
                                <td><span asp-validation-for="DateOfJoing" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-primary">Salary</td>
                                <td><input asp-for="Salary" class="form-control" /></td>
                                <td><span asp-validation-for="Salary" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-primary">ID Proof Type</td>
                                <td><input asp-for="IdProofType" class="form-control" /></td>
                                <td><span asp-validation-for="IdProofType" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-primary">ID Proof Number</td>
                                <td><input asp-for="IdProofNumber" class="form-control" /></td>
                                <td><span asp-validation-for="IdProofNumber" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-primary">Status</td>
                                <td><input asp-for="Status" class="form-control" /></td>
                                <td><span asp-validation-for="Status" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-primary">Experience</td>
                                <td><input asp-for="Experience" class="form-control" /></td>
                                <td><span asp-validation-for="Experience" class="text-danger"></span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

              <div class="container mt-5">
    <!-- Form for Creating Employee -->
    <form asp-action="Create">
        <!-- Form fields go here -->
        
        <!-- Submit Button -->
                        <div class="container mt-5">
                            <!-- Form for Creating Employee -->
                            <form asp-action="Create">
                                <!-- Form fields go here -->
                                <!-- Button Group -->
                                <div class="d-flex justify-content-between mt-4">
                                    <!-- Submit Button -->
                                    <div class="form-group">
                                        <input type="submit" value="Create Employee" class="btn btn-primary px-3 ml-3" />
                                    </div>

                                    <!-- Back Button -->
                                    <div class="form-group">
                                        <a asp-action="EmployeeTable" class="btn btn-secondary px-3 ml-3">
                                            <i class="bi bi-arrow-left"></i> Back to List
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>

    </form>
</div>

            </form>
        </div>
    </div>

   
</div>
