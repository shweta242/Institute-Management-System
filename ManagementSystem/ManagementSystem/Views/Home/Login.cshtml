@model ManagementSystem.Models.Register

@{
    ViewData["Title"] = "Login";
}

<!-- Full Page Centered Login Form -->
<div class="container mt-5">
    <h1 class="text-center mb-4" style="color: #2c3e50;">Login</h1>
    <h4 class="text-center text-secondary">Welcome Back</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form asp-action="Login" class="p-4 shadow rounded" style="background: #ecf0f1; color: #2c3e50;">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Email -->
                <div class="form-group mb-3 position-relative">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" style="background-color: #3498db; color: white;">
                                <i class="bi bi-envelope"></i>
                            </span>
                        </div>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" style="background-color: #ffffff; color: #2c3e50;" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-group mb-3 position-relative">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" style="background-color: #e74c3c; color: white;">
                                <i class="bi bi-lock"></i>
                            </span>
                        </div>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" style="background-color: #ffffff; color: #2c3e50;" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-success w-100">Login</button>
                </div>

                <!-- Additional Links -->
                <div class="text-center mt-3">
                    <a href="#" class="text-decoration-none" style="color: rebeccapurple">Forgot Password?</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {background: linear-gradient(to right, #a9d6f2, #f8d7e1);
        font-family: Arial, sans-serif;
        color: #2c3e50;
    }

    .form-control {
        background-color: rgba(0, 0, 0, 0.2);
    }

    form {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        form:hover {
            transform: scale(1.02);
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
        }

    .input-group-text {
        border: none;
    }
</style>

<!-- Add Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
