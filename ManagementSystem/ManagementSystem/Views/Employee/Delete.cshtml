@model ManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-danger">Delete Employee</h1>
        <p class="text-muted">Are you sure you want to delete this employee? This action cannot be undone.</p>
    </div>

    <!-- Delete Confirmation Card -->
    <div class="card shadow-lg border-0">
        <div class="card-header text-white" style="background: #dc3545;">
            <h3 class="text-center mb-0">Employee Details</h3>
        </div>
        <div class="card-body p-4">
            <form id="deleteForm" asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Employee Details Table -->
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <tbody>
                            <tr>
                                <td class="fw-bold text-danger">Name</td>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-danger">Gender</td>
                                <td>@Html.DisplayFor(model => model.Gender)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-danger">Email</td>
                                <td>@Html.DisplayFor(model => model.Email)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-danger">Contact No</td>
                                <td>@Html.DisplayFor(model => model.ContactNo)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-danger">Department</td>
                                <td>@Html.DisplayFor(model => model.Department)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-danger">Specialized Subject</td>
                                <td>@Html.DisplayFor(model => model.SpecializedSubject)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-danger">Designation</td>
                                <td>@Html.DisplayFor(model => model.Designation)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-danger">Date of Joining</td>
                                <td>@Html.DisplayFor(model => model.DateOfJoing)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-danger">Salary</td>
                                <td>@Html.DisplayFor(model => model.Salary)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-danger">ID Proof Type</td>
                                <td>@Html.DisplayFor(model => model.IdProofType)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-danger">ID Proof Number</td>
                                <td>@Html.DisplayFor(model => model.IdProofNumber)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-danger">Status</td>
                                <td>@Html.DisplayFor(model => model.Status)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold text-danger">Experience</td>
                                <td>@Html.DisplayFor(model => model.Experience)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Delete Button -->
                <div class="d-flex justify-content-between">
                    <!-- Delete Employee Button (Left) -->
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                        <button type="button" class="btn btn-danger px-3" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal">
                            Delete Employee
                        </button>
                    </div>

                    <!-- Back to List Button (Right) -->
                    <div class="form-group">
                        <a asp-action="EmployeeTable" class="btn btn-secondary px-3">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>

            </form>
        </div>
    </div>

    <!-- Back Button -->
   
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #ff4d4d;">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-danger fw-bold">Are you sure you want to delete this employee? This action cannot be undone!</p>
                <p class="text-muted">If you are sure, click "Confirm Delete" to proceed. Otherwise, click "Cancel".</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
            </div>
        </div>
    </div>
</div>
