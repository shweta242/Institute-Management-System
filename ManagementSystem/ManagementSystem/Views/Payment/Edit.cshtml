@model ManagementSystem.Models.Payment

@{
    ViewData["Title"] = "Edit";
}

<h1 style="background: linear-gradient(to right, #3b3b3b, #d32f2f); color: white; padding: 10px;">
    Edit
</h1>



<h4>Payment</h4>
<hr />
<div class="row">
